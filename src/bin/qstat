#!/usr/bin/env python
import click


@click.command()
@click.option("jobname", "-j", default=None)
@click.option("username", "-u", default=None)
def main(jobname, username):
    if username:
        # $ qstat -u awake
        click.echo("job-ID  prior   name       user         state submit/start at     queue                          slots ja-task-ID ")
